    <script>
        const canvas = document.getElementById('torusCanvas');
        const ctx = canvas.getContext('2d');

        let width, height;
        let particles = [];

        const colors = ['#2dd4bf', '#3b82f6', '#4f46e5', '#818cf8'];

        function resize() {
            width = canvas.width = window.innerWidth;
            height = canvas.height = window.innerHeight;
        }

        window.addEventListener('resize', resize);
        resize();

        class Particle {
            constructor() {
                this.reset();
            }

            reset() {
                this.u = Math.random() * Math.PI * 2;
                this.v = Math.random() * Math.PI * 2;
                
                this.R = 200 + Math.random() * 50;
                this.r = 80 + Math.random() * 20;

                this.color = colors[Math.floor(Math.random() * colors.length)];
                this.size = Math.random() * 1.5;
                this.speedU = 0.002 + Math.random() * 0.005;
                this.speedV = 0.001 + Math.random() * 0.003;
            }

            update(mouseX, mouseY) {
                this.u += this.speedU;
                this.v += this.speedV;

                let x3d = (this.R + this.r * Math.cos(this.u)) * Math.cos(this.v);
                let y3d = (this.R + this.r * Math.cos(this.u)) * Math.sin(this.v);
                let z3d = this.r * Math.sin(this.u);

                const time = Date.now() * 0.0003;
                
                let yTemp = y3d * Math.cos(time) - z3d * Math.sin(time);
                let zTemp = y3d * Math.sin(time) + z3d * Math.cos(time);
                y3d = yTemp;
                z3d = zTemp;

                let xTemp = x3d * Math.cos(time * 0.5) - z3d * Math.sin(time * 0.5);
                z3d = x3d * Math.sin(time * 0.5) + z3d * Math.cos(time * 0.5);
                x3d = xTemp;

                const scale = 800 / (800 + z3d);
                this.x2d = width / 2 + x3d * scale;
                this.y2d = height / 2 + y3d * scale;
                this.alpha = scale;
            }

            draw() {
                ctx.beginPath();
                ctx.arc(this.x2d, this.y2d, this.size, 0, Math.PI * 2);
                ctx.fillStyle = this.color;
                ctx.globalAlpha = Math.max(0.1, (this.alpha - 0.5));
                ctx.fill();
                ctx.globalAlpha = 1;
            }
        }

        const particleCount = window.innerWidth < 768 ? 400 : 900;
        for (let i = 0; i < particleCount; i++) {
            particles.push(new Particle());
        }

        function animate() {
            ctx.fillStyle = 'rgba(5, 5, 17, 0.2)'; 
            ctx.fillRect(0, 0, width, height);

            particles.forEach(p => {
                p.update();
                p.draw();
            });

            requestAnimationFrame(animate);
        }

        animate();

        // Background particles
        const bgCanvas = document.getElementById('bgCanvas');
        const bgCtx = bgCanvas.getContext('2d');

        let bgWidth, bgHeight;
        let bgParticles = [];

        function resizeBg() {
            bgWidth = bgCanvas.width = window.innerWidth;
            bgHeight = bgCanvas.height = window.innerHeight;
        }
        window.addEventListener('resize', resizeBg);
        resizeBg();

        class BgParticle {
            constructor() {
                this.x = Math.random() * bgWidth;
                this.y = Math.random() * bgHeight;
                this.vx = (Math.random() - 0.5) * 0.5;
                this.vy = (Math.random() - 0.5) * 0.5;
                this.size = Math.random() * 2.5;
                this.color = Math.random() > 0.5 ? '#00f2ea' : '#b026ff';
            }

            update() {
                this.x += this.vx;
                this.y += this.vy;

                if (this.x < 0) this.x = bgWidth;
                if (this.x > bgWidth) this.x = 0;
                if (this.y < 0) this.y = bgHeight;
                if (this.y > bgHeight) this.y = 0;
            }

            draw() {
                bgCtx.beginPath();
                bgCtx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                bgCtx.fillStyle = this.color;
                bgCtx.globalAlpha = 0.5;
                bgCtx.fill();
            }
        }

        for (let i = 0; i < 80; i++) {
            bgParticles.push(new BgParticle());
        }

        function animateBg() {
            bgCtx.clearRect(0, 0, bgWidth, bgHeight);
            
            for (let i = 0; i < bgParticles.length; i++) {
                bgParticles[i].update();
                bgParticles[i].draw();
                
                for (let j = i; j < bgParticles.length; j++) {
                    const dx = bgParticles[i].x - bgParticles[j].x;
                    const dy = bgParticles[i].y - bgParticles[j].y;
                    const distance = Math.sqrt(dx * dx + dy * dy);

                    if (distance < 150) {
                        bgCtx.beginPath();
                        bgCtx.strokeStyle = bgParticles[i].color;
                        bgCtx.globalAlpha = 0.15 - (distance / 150) * 0.15;
                        bgCtx.lineWidth = 0.8;
                        bgCtx.moveTo(bgParticles[i].x, bgParticles[i].y);
                        bgCtx.lineTo(bgParticles[j].x, bgParticles[j].y);
                        bgCtx.stroke();
                    }
                }
            }
            requestAnimationFrame(animateBg);
        }
        animateBg();

        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuOpenIcon = document.getElementById('menu-open-icon');
        const menuCloseIcon = document.getElementById('menu-close-icon');
        
        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                const isOpen = mobileMenu.classList.toggle('active');
                menuOpenIcon.classList.toggle('hidden');
                menuCloseIcon.classList.toggle('hidden');
                mobileMenuBtn.setAttribute('aria-expanded', isOpen);
                mobileMenuBtn.setAttribute('aria-label', isOpen ? 'Cerrar menú de navegación' : 'Abrir menú de navegación');
            });
            
            const mobileLinks = mobileMenu.querySelectorAll('a');
            mobileLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.remove('active');
                    menuOpenIcon.classList.remove('hidden');
                    menuCloseIcon.classList.add('hidden');
                    mobileMenuBtn.setAttribute('aria-expanded', 'false');
                    mobileMenuBtn.setAttribute('aria-label', 'Abrir menú de navegación');
                });
            });
        }
    </script>
