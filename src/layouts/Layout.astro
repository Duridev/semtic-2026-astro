---
interface Props {
    title: string;
    description?: string;
}

const { title, description = "SEMTIC - Agencia digital especializada en desarrollo web, diseño gráfico y marketing digital." } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <meta name="keywords" content="agencia digital, desarrollo web, diseño gráfico, marketing digital, SEO, SEM, páginas web, aplicaciones web">
    <meta name="author" content="SEMTIC Agencia Digital">
    <title>{title} | SEMTIC</title>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&family=Space+Grotesk:wght@300;500;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/webp" href="/semtic-favicon.webp">
</head>
<body class="antialiased selection:bg-[#2dd4bf] selection:text-[#050511]">

    <!-- Canvas para el efecto de partículas de fondo -->
    <canvas id="bgCanvas" class="fixed top-0 left-0 w-full h-full opacity-50" style="z-index: 1; pointer-events: none;"></canvas>
    
    <!-- Capa de ruido/estrellas estática -->
    <div class="fixed top-0 left-0 w-full h-full stars-bg opacity-25" style="z-index: 0; pointer-events: none;"></div>

    <!-- Navbar -->
    <nav class="fixed w-full transition-all duration-300 px-3 md:px-6 py-4 glass border-b-0" style="z-index: 100; max-width: 100vw;">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <!-- Logo Brand -->
            <a href="/" class="flex items-center group">
                <img src="/logo-semtic.png" alt="SEMTIC" class="h-6 md:h-10 w-auto">
            </a>

            <!-- Desktop Menu -->
            <div class="hidden md:flex gap-8 items-center">
                <a href="/" class="text-sm uppercase tracking-widest text-gray-300 hover:text-[#2dd4bf] hover:drop-shadow-[0_0_8px_rgba(45,212,191,0.8)] transition-all">Inicio</a>
                <a href="/servicios" class="text-sm uppercase tracking-widest text-gray-300 hover:text-[#2dd4bf] hover:drop-shadow-[0_0_8px_rgba(45,212,191,0.8)] transition-all">Servicios</a>
                <a href="/nosotros" class="text-sm uppercase tracking-widest text-gray-300 hover:text-[#2dd4bf] hover:drop-shadow-[0_0_8px_rgba(45,212,191,0.8)] transition-all">Nosotros</a>
                <a href="/faq" class="text-sm uppercase tracking-widest text-gray-300 hover:text-[#2dd4bf] hover:drop-shadow-[0_0_8px_rgba(45,212,191,0.8)] transition-all">FAQ</a>
                <a href="/contacto" class="px-6 py-2 rounded-full border border-[#2dd4bf] text-[#2dd4bf] hover:bg-[#2dd4bf] hover:text-[#050511] transition-all duration-300 font-semibold text-sm tracking-wide">
                    Hablemos
                </a>
            </div>
            
            <!-- Mobile Menu Button -->
            <button id="mobile-menu-btn" class="md:hidden text-white focus:outline-none" aria-label="Abrir menú de navegación" aria-expanded="false" aria-controls="mobile-menu">
                <svg id="menu-open-icon" class="h-6 w-6 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
                <svg id="menu-close-icon" class="h-6 w-6 hidden transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="md:hidden">
            <div class="px-4 pt-4 pb-6 space-y-3">
                <a href="/" class="block text-sm uppercase tracking-widest text-gray-300 hover:text-[#2dd4bf] hover:drop-shadow-[0_0_8px_rgba(45,212,191,0.8)] transition-all py-3 px-4 rounded-lg hover:bg-white/5">Inicio</a>
                <a href="/servicios" class="block text-sm uppercase tracking-widest text-gray-300 hover:text-[#2dd4bf] hover:drop-shadow-[0_0_8px_rgba(45,212,191,0.8)] transition-all py-3 px-4 rounded-lg hover:bg-white/5">Servicios</a>
                <a href="/nosotros" class="block text-sm uppercase tracking-widest text-gray-300 hover:text-[#2dd4bf] hover:drop-shadow-[0_0_8px_rgba(45,212,191,0.8)] transition-all py-3 px-4 rounded-lg hover:bg-white/5">Nosotros</a>
                <a href="/faq" class="block text-sm uppercase tracking-widest text-gray-300 hover:text-[#2dd4bf] hover:drop-shadow-[0_0_8px_rgba(45,212,191,0.8)] transition-all py-3 px-4 rounded-lg hover:bg-white/5">FAQ</a>
                <a href="/contacto" class="block text-center px-6 py-3 rounded-full border border-[#2dd4bf] text-[#2dd4bf] hover:bg-[#2dd4bf] hover:text-[#050511] transition-all duration-300 font-semibold text-sm tracking-wide">Hablemos</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        <slot />
    </main>

    <!-- Footer -->
    <footer class="py-8 border-t border-white/10 text-center text-gray-400 text-sm" style="z-index: 10; background: rgba(5, 5, 17, 0.95);">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4 mb-4">
                <div>
                    <img src="/logo-semtic.png" alt="SEMTIC" class="h-8 w-auto mx-auto md:mx-0">
                </div>
                <div class="flex gap-6">
                    <a href="/" class="hover:text-[#2dd4bf] transition-colors">Inicio</a>
                    <a href="/servicios" class="hover:text-[#2dd4bf] transition-colors">Servicios</a>
                    <a href="/nosotros" class="hover:text-[#2dd4bf] transition-colors">Nosotros</a>
                    <a href="/faq" class="hover:text-[#2dd4bf] transition-colors">FAQ</a>
                    <a href="/contacto" class="hover:text-[#2dd4bf] transition-colors">Contacto</a>
                </div>
            </div>
            <p>© 2025 SEMTIC Agencia. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script>
        // Background particles
        const bgCanvas = document.getElementById('bgCanvas');
        const bgCtx = bgCanvas.getContext('2d');

        let bgWidth, bgHeight;
        let bgParticles = [];

        function resizeBg() {
            bgWidth = bgCanvas.width = window.innerWidth;
            bgHeight = bgCanvas.height = window.innerHeight;
        }
        window.addEventListener('resize', resizeBg);
        resizeBg();

        class BgParticle {
            constructor() {
                this.x = Math.random() * bgWidth;
                this.y = Math.random() * bgHeight;
                this.vx = (Math.random() - 0.5) * 0.5;
                this.vy = (Math.random() - 0.5) * 0.5;
                this.size = Math.random() * 2.5;
                this.color = Math.random() > 0.5 ? '#00f2ea' : '#b026ff';
            }

            update() {
                this.x += this.vx;
                this.y += this.vy;

                if (this.x < 0) this.x = bgWidth;
                if (this.x > bgWidth) this.x = 0;
                if (this.y < 0) this.y = bgHeight;
                if (this.y > bgHeight) this.y = 0;
            }

            draw() {
                bgCtx.beginPath();
                bgCtx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                bgCtx.fillStyle = this.color;
                bgCtx.globalAlpha = 0.5;
                bgCtx.fill();
            }
        }

        for (let i = 0; i < 80; i++) {
            bgParticles.push(new BgParticle());
        }

        function animateBg() {
            bgCtx.clearRect(0, 0, bgWidth, bgHeight);
            
            for (let i = 0; i < bgParticles.length; i++) {
                bgParticles[i].update();
                bgParticles[i].draw();
                
                for (let j = i; j < bgParticles.length; j++) {
                    const dx = bgParticles[i].x - bgParticles[j].x;
                    const dy = bgParticles[i].y - bgParticles[j].y;
                    const distance = Math.sqrt(dx * dx + dy * dy);

                    if (distance < 150) {
                        bgCtx.beginPath();
                        bgCtx.strokeStyle = bgParticles[i].color;
                        bgCtx.globalAlpha = 0.15 - (distance / 150) * 0.15;
                        bgCtx.lineWidth = 0.8;
                        bgCtx.moveTo(bgParticles[i].x, bgParticles[i].y);
                        bgCtx.lineTo(bgParticles[j].x, bgParticles[j].y);
                        bgCtx.stroke();
                    }
                }
            }
            requestAnimationFrame(animateBg);
        }
        animateBg();

        // Mobile menu toggle
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuOpenIcon = document.getElementById('menu-open-icon');
        const menuCloseIcon = document.getElementById('menu-close-icon');
        
        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                const isOpen = mobileMenu.classList.toggle('active');
                menuOpenIcon.classList.toggle('hidden');
                menuCloseIcon.classList.toggle('hidden');
                mobileMenuBtn.setAttribute('aria-expanded', isOpen);
                mobileMenuBtn.setAttribute('aria-label', isOpen ? 'Cerrar menú de navegación' : 'Abrir menú de navegación');
            });
            
            const mobileLinks = mobileMenu.querySelectorAll('a');
            mobileLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.remove('active');
                    menuOpenIcon.classList.remove('hidden');
                    menuCloseIcon.classList.add('hidden');
                    mobileMenuBtn.setAttribute('aria-expanded', 'false');
                    mobileMenuBtn.setAttribute('aria-label', 'Abrir menú de navegación');
                });
            });
        }
    </script>
</body>
</html>
